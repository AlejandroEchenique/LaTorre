
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}
    <h2>Categorias</h2>
    <div id="cargando" class="text-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div class="table-responsive mt-4" id="contenido">
        <table id="tabla" class="table table-striped table-bordered display" style="width:100%"></table>
    </div>
    <div class="modal fade" id="modalMarca" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Categoria</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Nombre:</label>
                                <input type="text" class="form-control" id="id" hidden="hidden">
                                <input type="text" class="form-control" id="nombre" placeholder="Nombre">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-ejecucion" onclick="Guardar()">Guardar</button>
                </div>
            </div>
        </div>
    </div>


    <script>
        tabla = $('#tabla').DataTable({
            columns: [
                { title: "#", width: '5%' },
                { title: "Nombre", width: '60%' },
                { title: "Estado", width: '22%' },
                { title: "<button  class='btn btn-ejecucion' data-bs-toggle='modal' data-bs-target='#modalMarca' onclick='Agregar()'>Nuevo</button>", width: '13%' }
            ],
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
            },
            "lengthMenu": [[5, 10, 15, -1], [5, 10, 15, "All"]]
        });
        $("#cargando").show();
        $("#contenido").hide();
        $(document).ready(function () {

            setTimeout(function () {
                $("#cargando").hide();
                $("#contenido").show();
                Actualizar();
            }, 1000);
        });
    </script>
