
@{
    ViewBag.Title = "IndexAdministrador";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}


<h2>Libreria</h2>
<div id="cargando" class="text-center">
    <div class="spinner-border" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<div class="table-responsive" id="contenido">
    <table id="tabla" class="table table-striped table-bordered display" style="width:100%"></table>
</div>
<!-- Modal -->
<div class="modal fade" id="modalProducto" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Libreria</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6 mt-2">
                        <label>Nombre:</label>
                        <input type="text" class="form-control" id="id" hidden="hidden">
                        <input type="text" class="form-control" id="nombre" placeholder="Producto">
                    </div>
                    <div class="col-sm-6 mt-2">
                        <label>Precio:</label>
                        <input type="text" class="form-control" id="precio" placeholder="Precio" />
                    </div>
                    <div class="col-sm-6 mt-2">
                        <label>Marca:</label>
                        <select class="form-select" id="idMarca">
                            <option>Marca 1</option>
                            <option>Marca 2</option>
                            <option>Marca 3</option>
                            <option>Marca 4</option>
                            <option>Marca 5</option>
                        </select>
                    </div>
                    <div class="col-sm-6 mt-2">
                        <label>Categoría:</label>
                        <select class="form-select" id="idProveedor">
                            <option>Categoria 1</option>
                            <option>Categoria 2</option>
                            <option>Categoria 3</option>
                            <option>Categoria 4</option>
                            <option>Categoria 5</option>
                        </select>
                    </div>
                    <div class="col-sm-12 mt-2">
                        <label>Descripción:</label>
                        <textarea class="form-control" id="descripcion" placeholder="Descripción" rows="3" maxlength="300"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalImagenProducto" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Imagen de Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6 mt-2">
                        <label>Nombre de la Imagen:</label>
                        <input type="text" class="form-control" id="idImagen" hidden="hidden" />
                        <input type="text" class="form-control" id="nombreImagen" placeholder="Nombre" />
                    </div>
                    <div class="col-sm-6 mt-2">
                        <label>Tipo:</label>
                        <select class="form-select" id="tipoImagen">
                            <option value="0">Seleccionar</option>
                            <option value="1">Portada</option>
                            <option value="2">Galeria</option>
                        </select>
                    </div>
                    <div class="col-sm-12 mt-2">
                        <label>Link:</label>
                        <input type="text" class="form-control" id="idProducto" hidden="hidden" />
                        <input type="text" class="form-control" id="link" placeholder="Imagen" />
                    </div>
                    <div class="col-sm-12 mt-2">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Imagen</th>
                                    <th>Nombre</th>
                                    <th>Tipo</th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody id="tbImagenes">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-ejecucion" onclick="GuardarImagen()">Agregar</button>
            </div>
        </div>
    </div>
</div>

<script>
    tabla = $('#tabla').DataTable({
        columns: [
            { title: "#", width: '5%' },
            { title: "Imagen", width: '10%' },
            { title: "Nombre", width: '20%' },
            { title: "Precio", width: '15%' },
            { title: "Marca", width: '20%' },
            { title: "Categoría", width: '20%' },
            { title: "<button  class='btn btn-ejecucion' data-bs-toggle='modal' data-bs-target='#modalProducto' onclick='Agregar()'>Nuevo</button>", width: '10%' }
        ],
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
        },
        "lengthMenu": [[5, 10, 15, -1], [5, 10, 15, "All"]]
    });
    $("#cargando").show();
    $("#contenido").hide();

    $(document).ready(function () {

        setTimeout(function () {
            $("#cargando").hide();
            $("#contenido").show();
            Actualizar();
        }, 1000);
    });
</script>
